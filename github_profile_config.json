{
  "github_profile_updater": {
    "task_description": "Scan specified user path for development projects and generate comprehensive GitHub profile update while ignoring Windows system files and folders",
    "scan_configuration": {
      "base_path": "/workspace",
      "recursive_scan": true,
      "max_depth": 5,
      "follow_symlinks": false
    },
    "windows_exclusion_rules": {
      "system_folders": [
        "AppData",
        "Application Data",
        "Local Settings",
        "My Documents",
        "NetHood",
        "PrintHood",
        "Recent",
        "SendTo",
        "Templates",
        "Start Menu",
        "Desktop",
        "Downloads",
        "Pictures",
        "Videos",
        "Music",
        "Documents\\My Games",
        "Documents\\My Music",
        "Documents\\My Pictures",
        "Documents\\My Videos",
        "Contacts",
        "Favorites",
        "Links",
        "Saved Games",
        "Searches",
        "OneDrive",
        "3D Objects",
        "Cookies",
        "History",
        "Temporary Internet Files",
        ".thumbnails",
        "Thumbs.db"
      ],
      "system_files": [
        "desktop.ini",
        "thumbs.db",
        "ehthumbs.db",
        "folder.jpg",
        "albumart*.jpg",
        "ntuser.*",
        "NTUSER.*",
        "UsrClass.dat*",
        "hiberfil.sys",
        "pagefile.sys",
        "swapfile.sys"
      ],
      "temporary_patterns": [
        "*.tmp",
        "*.temp",
        "*.bak",
        "*.old",
        "*.cache",
        "~$*",
        "*.lnk",
        "*.url"
      ],
      "windows_apps_folders": [
        "WindowsApps",
        "Microsoft",
        "Microsoft.NET",
        ".NET",
        "Windows Kits",
        "Windows SDK",
        "Visual Studio*",
        "Microsoft Visual Studio*",
        "Microsoft SQL Server*",
        "Internet Explorer",
        "Windows Media Player",
        "Windows Photo Viewer",
        "Windows Defender"
      ]
    },
    "development_discovery_patterns": {
      "project_indicators": {
        "root_files": [
          "package.json",
          "composer.json",
          "requirements.txt",
          "Pipfile",
          "pyproject.toml",
          "pom.xml",
          "build.gradle",
          "Cargo.toml",
          "go.mod",
          "Gemfile",
          "mix.exs",
          ".env",
          ".env.example",
          "dockerfile",
          "Dockerfile",
          "docker-compose.yml",
          "docker-compose.yaml"
        ],
        "config_files": [
          ".gitignore",
          ".eslintrc*",
          ".prettierrc*",
          "webpack.config.js",
          "vite.config.*",
          "tsconfig.json",
          "babel.config.js",
          ".babelrc",
          "tailwind.config.js"
        ],
        "documentation_files": [
          "README.md",
          "README.txt",
          "CHANGELOG.md",
          "CHANGELOG.txt",
          "LICENSE",
          "LICENSE.md",
          "LICENSE.txt",
          "CONTRIBUTING.md",
          "docs/**"
        ]
      },
      "code_file_extensions": [
        ".php",
        ".py",
        ".js",
        ".ts",
        ".jsx",
        ".tsx",
        ".html",
        ".css",
        ".scss",
        ".sass",
        ".less",
        ".sql",
        ".json",
        ".xml",
        ".yml",
        ".yaml",
        ".java",
        ".c",
        ".cpp",
        ".h",
        ".cs",
        ".go",
        ".rs",
        ".rb",
        ".swift",
        ".kt",
        ".dart",
        ".vue",
        ".svelte",
        ".r",
        ".R",
        ".ipynb",
        ".sh",
        ".ps1",
        ".bat"
      ],
      "ignore_folders": [
        "node_modules",
        ".git",
        ".svn",
        "__pycache__",
        ".pytest_cache",
        "venv",
        "env",
        ".env",
        "virtualenv",
        ".virtualenv",
        "target",
        "build",
        "dist",
        "out",
        "bin",
        "obj",
        ".idea",
        ".vscode/extensions",
        "vendor",
        ".sass-cache",
        ".next",
        ".nuxt",
        "coverage",
        "logs",
        "*.log",
        ".cache",
        ".tmp",
        "temp"
      ]
    },
    "analysis_framework": {
      "project_classification": {
        "web_applications": {
          "indicators": ["index.html", "app.js", "server.js", "index.php", "composer.json"],
          "frameworks": ["laravel", "symfony", "express", "react", "vue", "angular", "django", "flask"]
        },
        "data_science": {
          "indicators": [".ipynb", "pandas", "numpy", "matplotlib", "seaborn", "scikit-learn"],
          "file_patterns": ["*analysis*", "*data*", "*ml*", "*model*", "*notebook*"]
        },
        "blockchain": {
          "indicators": ["truffle", "hardhat", "web3", "ethereum", "solidity"],
          "file_patterns": ["*contract*", "*blockchain*"]
        },
        "automation": {
          "indicators": ["n8n", "zapier", "automation", "workflow"],
          "file_patterns": ["*automation*", "*workflow*", "*script*"]
        },
        "api_development": {
          "indicators": ["api", "rest", "graphql", "swagger", "postman"],
          "file_patterns": ["*api*", "*endpoint*", "*route*"]
        },
        "mobile_development": {
          "indicators": ["react-native", "flutter", "ionic", "cordova", "xamarin"],
          "file_patterns": ["*mobile*", "*app*"]
        }
      },
      "skill_extraction": {
        "from_package_files": {
          "package.json": ["dependencies", "devDependencies"],
          "composer.json": ["require", "require-dev"],
          "requirements.txt": "parse_line_by_line",
          "Pipfile": ["packages", "dev-packages"]
        },
        "from_imports": {
          "python": ["import", "from ... import"],
          "javascript": ["import", "require"],
          "php": ["use", "include", "require"]
        },
        "from_file_content": {
          "database_usage": ["mysql", "postgresql", "mongodb", "sqlite", "redis"],
          "cloud_services": ["aws", "azure", "gcp", "heroku", "vercel", "netlify"],
          "apis": ["rest", "graphql", "soap", "grpc"]
        }
      }
    },
